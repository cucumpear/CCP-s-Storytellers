          <li>World</li>
        </allowedTargetTags>
        <onDays>30</onDays>
        <minSpacingDays>0.2</minSpacingDays>
        <numIncidentsRange>4</numIncidentsRange>
        <acceptFractionByDaysPassedCurve>
          <points>
            <li>(5, 0)</li>
