<?xml version="1.0" encoding="utf-8" ?>
<StorytellerDefs>

  
	<StorytellerDef>
		<defName>Reika</defName>
    <label>Reika Rabid</label>
		<description>Reika will do whatever she fancies at any given moment. She does not care if you're ready.</description>
    <portraitLarge>ReikaRabid/Reika</portraitLarge>
    <portraitTiny>ReikaRabid/ReikaTiny</portraitTiny>
    <listOrder>50</listOrder>
    <desiredPopulationMin>9</desiredPopulationMin>
    <desiredPopulationMax>25</desiredPopulationMax>
    <desiredPopulationCritical>55</desiredPopulationCritical>
    <comps>
      <li Class="StorytellerCompProperties_RandomMain">
		<allowedTargetTypes>MapPlayerHome</allowedTargetTypes>
        <minDaysPassed>1</minDaysPassed>
        <mtbDays>0.65</mtbDays>
        <maxThreatBigIntervalDays>6</maxThreatBigIntervalDays>
        <categoryWeights>
          <Misc>9</Misc>
          <OrbitalVisitor>2.5</OrbitalVisitor>
          <AllyArrival>1.4</AllyArrival>
		  <AllyAssistance>0.7</AllyAssistance>
          <ShipChunkDrop>0.02</ShipChunkDrop>
          <ThreatSmall>1</ThreatSmall>
          <ThreatBig>3</ThreatBig>
        </categoryWeights>
      </li>
	  <li Class="StorytellerCompProperties_CategoryMTB">
		<allowedTargetTypes>World</allowedTargetTypes>
		<minDaysPassed>1</minDaysPassed>
		<category>Misc</category>
		<mtbDays>5</mtbDays>
	  </li>
      <li Class="StorytellerCompProperties_Disease">
        <minDaysPassed>0</minDaysPassed>
      </li>
      <li Class="StorytellerCompProperties_CategoryIndividualMTBByBiome">
        <category>CaravanTarget</category>
      </li>
    </comps>
  </StorytellerDef>

  
  <StorytellerDef>
	<defName>Bellatrix</defName>
    <label>Bellatrix Balanced</label>
    <description>Bellatrix is a bit of a bitch and loves her blood, though she will try to be somewhat balanced.</description>
    <portraitLarge>BellatrixBalanced/Bellatrix</portraitLarge>
    <portraitTiny>BellatrixBalanced/BellatrixTiny</portraitTiny>
    <listOrder>55</listOrder>
    <desiredPopulationMin>8</desiredPopulationMin>
    <desiredPopulationMax>20</desiredPopulationMax>
    <desiredPopulationCritical>35</desiredPopulationCritical>
	<comps>
      <li Class="StorytellerCompProperties_ClassicIntro"/>
      <li Class="StorytellerCompProperties_ThreatCycle">
        <minDaysPassed>5</minDaysPassed>
        <mtbDaysThreatSmall>4</mtbDaysThreatSmall>
        <mtbDaysThreatBig>1</mtbDaysThreatBig>
        <threatOffDays>3.8</threatOffDays>
        <threatOnDays>4</threatOnDays>
        <minDaysBetweenThreatBigs>0.5</minDaysBetweenThreatBigs>
      </li>
      <li Class="StorytellerCompProperties_CategoryMTB">
		<allowedTargetTypes>MapPlayerHome</allowedTargetTypes>
        <minDaysPassed>5</minDaysPassed>
        <category>Misc</category>
        <mtbDays>2.5</mtbDays>
      </li>
	  <li Class="StorytellerCompProperties_CategoryMTB">
		<allowedTargetTypes>World</allowedTargetTypes>
		<minDaysPassed>9</minDaysPassed>
		<category>Misc</category>
		<mtbDays>6</mtbDays>
	  </li>
      <li Class="StorytellerCompProperties_AllyInteraction">
        <minDaysPassed>5</minDaysPassed>
        <baseMtb>6</baseMtb>
        <allowedTargetTypes>MapPlayerHome</allowedTargetTypes>
      </li>
      <li Class="StorytellerCompProperties_SingleMTB">
        <incident>OrbitalTraderArrival</incident>
        <mtbDays>8</mtbDays>
      </li>
      <li Class="StorytellerCompProperties_ShipChunkDrop"/>
      <li Class="StorytellerCompProperties_Disease">
        <minDaysPassed>15</minDaysPassed>
      </li>
      <li Class="StorytellerCompProperties_CategoryIndividualMTBByBiome">
        <category>CaravanTarget</category>
      </li>
    </comps>
  </StorytellerDef>
  
  
</StorytellerDefs>